{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "#*": ["./*"]
    },
    "lib": ["dom", "dom.iterable", "esnext", "webworker"],
    "jsx": "preserve",
    "types": ["@serwist/next/typings"],
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", ".next/types/**/*.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
